<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RadioGroup
        android:id="@+id/closeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RadioButton
            android:id="@+id/close_this_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="關閉當前組別所有分享"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/close_other_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="關閉當前組別對第"
            android:textSize="12sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/closeGroup"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:text="組的分享"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/Spinner_opeTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toRightOf="@+id/closeGroup"
        android:layout_weight="1" />

</RelativeLayout>