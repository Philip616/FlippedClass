<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="請選擇課程"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/remind_t2_1_title"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="標題名稱: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/remind_sp_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="這是內文"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_attend_studentcheckin_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附件:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/download_progress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar_horizontal_1"
            android:secondaryProgress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/download_message1"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:gravity="center_horizontal|center_vertical"
                android:text="下载进度:0%" />

            <Button
                android:id="@+id/download_btn_1_1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="82dp"
                android:layout_height="28dp"
                android:layout_weight="0.03"
                android:text="下載" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_courseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_t2_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/ed_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_note"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="送出" />

</LinearLayout>
