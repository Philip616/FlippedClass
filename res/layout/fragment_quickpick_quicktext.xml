<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL_qt_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GCMRegisterActivity"
    android:background="#FFEEDD" >

    <TextView
        android:id="@+id/tv_qt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="請選擇課程"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/lv_qt"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_weight="0.68"
        android:stackFromBottom="true" >

    </ListView>

    <Button
        android:id="@+id/btn_piccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spacew_btn"
       	android:textColor="#6dc2c7"
        android:textSize="20sp"
        android:text="貼圖計算"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/LL_qt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" >

        <Button
            android:id="@+id/btn_add"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <EditText
            android:id="@+id/et_qt_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/btn_qt_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/send"
       		 />
    </LinearLayout>

</LinearLayout>